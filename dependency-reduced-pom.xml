<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>us.dynmap</groupId>
  <artifactId>Dynmap-EssentialsX</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <includes>
          <include>*.yml</include>
          <include>*.txt</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <excludes>
          <exclude>*.yml</exclude>
          <exclude>*.txt</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <minimizeJar>true</minimizeJar>
              <filters>
                <filter>
                  <artifact>org.bstats:bstats-bukkit</artifact>
                  <includes>
                    <include>**</include>
                  </includes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <relocations>
            <relocation>
              <pattern>org.bstats</pattern>
              <shadedPattern>org.dynmap.essentials.bstats</shadedPattern>
            </relocation>
          </relocations>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>spigot-repo</id>
      <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
    </repository>
    <repository>
      <releases />
      <snapshots />
      <id>dynmap-repo</id>
      <url>https://repo.mikeprimm.com/</url>
    </repository>
    <repository>
      <releases />
      <snapshots />
      <id>essentials</id>
      <url>https://repo.essentialsx.net/releases/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>us.dynmap</groupId>
      <artifactId>dynmap-api</artifactId>
      <version>3.3-SNAPSHOT</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>bukkit</artifactId>
          <groupId>org.bukkit</groupId>
        </exclusion>
        <exclusion>
          <artifactId>DynmapCoreAPI</artifactId>
          <groupId>us.dynmap</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>net.essentialsx</groupId>
      <artifactId>EssentialsX</artifactId>
      <version>2.19.2</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>paperlib</artifactId>
          <groupId>io.papermc</groupId>
        </exclusion>
        <exclusion>
          <artifactId>BaseProviders</artifactId>
          <groupId>net.essentialsx</groupId>
        </exclusion>
        <exclusion>
          <artifactId>PaperProvider</artifactId>
          <groupId>net.essentialsx</groupId>
        </exclusion>
        <exclusion>
          <artifactId>NMSReflectionProvider</artifactId>
          <groupId>net.essentialsx</groupId>
        </exclusion>
        <exclusion>
          <artifactId>1_8Provider</artifactId>
          <groupId>net.essentialsx</groupId>
        </exclusion>
        <exclusion>
          <artifactId>1_12Provider</artifactId>
          <groupId>net.essentialsx</groupId>
        </exclusion>
        <exclusion>
          <artifactId>spigot-api</artifactId>
          <groupId>org.spigotmc</groupId>
        </exclusion>
        <exclusion>
          <artifactId>configurate-yaml</artifactId>
          <groupId>org.spongepowered</groupId>
        </exclusion>
        <exclusion>
          <artifactId>checker-qual</artifactId>
          <groupId>org.checkerframework</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
